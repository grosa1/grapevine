<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link("Home", to: page_path(@conn, :index)) %></li>
    <li class="breadcrumb-item"><%= link("Settings", to: manage_setting_path(@conn, :show)) %></li>
    <li class="breadcrumb-item"><%= link(@game.name, to: manage_game_path(@conn, :show, @game.id)) %></li>
    <li class="breadcrumb-item"><%= link("Events", to: manage_game_event_path(@conn, :index, @game.id)) %></li>
    <li class="breadcrumb-item active"><%= @event.title %> Edit</li>
  </ol>
</nav>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <section>
      <h3>Edit <%= @event.title %></h3>

      <%= render("_form.html", changeset: @changeset, url: manage_event_path(@conn, :update, @event.id), submit: "Update Event") %>
    </section>
  </div>
</div>
